<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:padding="5dp" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <include layout="@layout/loaidichvu_spn" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung báo hỏng"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spn_baohong"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung hỏng chi tiết"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/inputnd_hong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhap vao day"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/inputMa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhap vao day"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/inputAcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhap vao day"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập số máy liên hệ"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/inputLienHe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhap vao day"
                android:inputType="numberDecimal"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người liên hệ"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/input_tenlienhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhap vao day"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày hẹn"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/ngayhen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="Nhap vao day"
                android:inputType="none"
                android:singleLine="true" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>