<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người nhận"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/lst_nguoiton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/app_name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_loaisua"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại sửa"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/lstloaisua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:prompt="@string/app_name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_loaisua_chitiet"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại sửa chi tiết"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/lst_loai_sua_chi_tiet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/app_name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ndsua_chitiet"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung sửa"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/txt_noi_dung_sua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhap vao day"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_nghiemthu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại nghiệm thu"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/lst_loai_nghiem_thu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/app_name" />

            <TextView
                android:id="@+id/lblNhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung nghiệm thu"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/txt_noi_dung_nghiem_thu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhap vao day"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại tồn"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/lst_loai_ton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung tồn"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/txt_noi_dung_ton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhap vao day"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/bttKhoaNgay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_3d"
                android:text="OK" />

            <Button
                android:id="@+id/exit_khoa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_3d"
                android:text="Thoát" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>