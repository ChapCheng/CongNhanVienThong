<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:padding="5dp" >

    <include
        android:id="@+id/map_dt"
        layout="@layout/map_data" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/map_dt"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Quận huyện" />

            <Spinner
                android:id="@+id/spn_quanhuyen"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Đối tác" />

            <Spinner
                android:id="@+id/spn_doitac"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Dự án" />

            <Spinner
                android:id="@+id/spn_duan"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Tên tòa nhà" />

            <EditText
                android:id="@+id/txt_ten_toa_nha"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ tòa nhà" />

            <EditText
                android:id="@+id/txt_dc_toa_nha"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>