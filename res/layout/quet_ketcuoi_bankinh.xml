<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_data"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/header_btn"
                android:drawableTop="@drawable/letter"
                android:text="Dữ liệu"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/mau_nen_title_menu" >
            </LinearLayout>

            <Button
                android:id="@+id/btn_map"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/header_btn"
                android:drawableTop="@drawable/location"
                android:text="Bản đồ"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@layout/border"
                android:orientation="horizontal" >

                <AutoCompleteTextView
                    android:id="@+id/txt_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Nhập địa chỉ" />

                <Button
                    android:id="@+id/btn_tim_diachi"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/btn_timkiem_tranfe"
                    android:drawableTop="@drawable/find"
                    android:gravity="center" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <fragment
                    android:id="@+id/mapo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="view.YourMapFragment" />

                <LinearLayout
                    android:id="@+id/lst_add_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="5dp"
                    android:background="#99E0E0E0"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ListView
                        android:id="@+id/lst_address_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </ListView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/data_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <com.handmark.pulltorefresh.library.PullToRefreshListView
                android:id="@+id/lst_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:id="@+id/scroll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map_view"
            android:layout_margin="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp " >

            <LinearLayout
                android:id="@+id/thongtinketcuoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Loại kết cuối" >
                </TextView>

                <Spinner
                    android:id="@+id/loai_doi_tuong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Khoảng cách" >
                </TextView>

                <Spinner
                    android:id="@+id/khoang_cach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/khoang_cach" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Tên kết cuối" >
                </TextView>

                <EditText
                    android:id="@+id/txt_name_ketcuoi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>