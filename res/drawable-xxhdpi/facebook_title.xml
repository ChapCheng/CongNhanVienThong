<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#449def"></solid>

            <stroke android:width="1dp" android:color="#355B8C"></stroke>

            <corners android:radius="3dp"></corners>

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#355B8C" android:startColor="#3E5B99"></gradient>

            <stroke android:width="1dp" android:color="#355B8C"></stroke>

            <corners android:radius="4dp"></corners>

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>
        </shape></item>

</selector>